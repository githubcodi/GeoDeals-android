<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#CDEB8B"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" />

 	<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/splash_desc"
        android:src="@drawable/geomoby1" />

    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/green_button"
        android:textOff="@string/monitored_service_on"
        android:textOn="@string/monitored_service_off"
        android:textStyle="bold" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/legal"
        android:textSize="12sp"
        android:layout_below="@id/togglebutton" 
        android:gravity="center"/>

    <!--Button
        android:id="@+id/mysettings"
        android:layout_width="250dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/togglebutton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/green_button"
        android:text="@string/mysettings" -->

</RelativeLayout>