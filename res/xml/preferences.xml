<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="first_step"
        android:title="First Step" >
        <ListPreference
            android:defaultValue="male"
            android:entries="@array/gender_array"
            android:entryValues="@array/gender_values"
            android:key="gender_pref"
            android:summary="Verify or deny the presence of a Y chromosome."
            android:title="Gender" />
    </PreferenceCategory>
    
    <PreferenceCategory
        android:key="second_step"
        android:title="Second Step" >
        <ListPreference
            android:defaultValue="15"
            android:entries="@array/age_array"
            android:entryValues="@array/age_values"
            android:key="age_pref"
            android:summary="Just wondering how young you are"
            android:title="Your Age" />
    </PreferenceCategory>
    
